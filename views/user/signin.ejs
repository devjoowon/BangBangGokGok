<!-- 로그인 ejs -->
<!DOCTYPE html>

<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>로그인</title>
        <link rel="stylesheet" href="../../static/css/ex.css" />
        <%-include('../include/head')%>
    </head>
    <body>
        <img src="" alt="로고" />
        <!-- 임시 로그인폼 -->
        <form name="login-form">
            <input type="text" id="id" placeholder="아이디" />
            <input type="password" id="pw" placeholder="비밀번호" />
            <button type="button" onclick="login()" id="btn_signin">로그인</button>
            <button type="button" onclick="location.href='signup.ejs'" id="btn_signup">회원가입</button>
        </form>
        <script>
            async function login() {
                const form = document.forms["login-form"];
                const response = await axios({
                    method: "POST",
                    url: "/users/signin",
                    data: {
                        id: form.id.value,
                        pw: form.pw.value,
                    },
                });
                const { result, accessToken, refreshToken, message } = response.data;
                if (result) {
                    localStorage.setItem("accessToken", accessToken);
                    localStorage.setItem("refreshToken", refreshToken);
                    document.location.href = "/";
                } else {
                    alert(message);
                    document.location.reload();
                }
        </script>
    </body>
</html>
