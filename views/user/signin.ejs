        <div class="logo">
            <img src="/static/css/image/logo.png" alt="로고" />
        </div>
        <br /><br />
        </form>
        <div class="loginWrapper">
            <form name="login-form">
                <input type="text" id="id" name="id" placeholder=" 아이디 입력" required />
                <br /><br />
                <input
                    type="password"
                    id="pw"
                    name="pw"
                    placeholder=" 비밀번호 입력"
                    required
                />
                <br /><br />
                <button type="button" onclick="login()" id="btn_signin">로그인</button>
                <br /><br />
                <button type="button" onclick="location.href='/users/signup'" id="btn_signup">
                    회원 가입
                </button>
            </form>
        </div>

        <script>
            async function login() {
                const form = document.forms["login-form"];
                const response = await axios({
                    method: "POST",
                    url: "/users/signin",
                    data: {
                        id: form.id.value,
                        pw: form.pw.value,
                    },
                });
                const { result, accessToken, refreshToken, message } = response.data;
                if (result) {
                    localStorage.setItem("accessToken", accessToken);
                    localStorage.setItem("refreshToken", refreshToken);
                    document.location.href = "/";
                } else {
                    alert(message);
                    document.location.reload();
                }
            }
        </script>
    </body>
</html>
