<!-- 회원가입 ejs -->
<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>회원가입</title>
        <link rel="stylesheet" href="/static/css/signup.css" />
        <%-include('../include/head')%>
    </head>
    <body>
        <div class="img_signup">
            <img src="/static/css/image/signup_img.png" alt="signup_img" id="img_signup" />
        </div>
        <div class="signUpWallPaper">
            <form name="signupForm" id="signupForm">
                <h1>Signup</h1>
                <p>There is no charge upon registration!</p>
                <div class="container">
                    <label for="email"><span> 이메일</span></label>
                    <br />
                    <input type="email" id="email" name="email" class="input" required />
                    <button class="btn_check" onclick="checkId()">중복 확인</button>
                    <br />
                    <label for="userId"><span> 아이디</span></label>
                    <br />
                    <input type="text" id="userId" name="userId" class="input" required />
                    <button class="btn_check">중복 확인</button>
                    <br />
                    <label for="userPw"><span> 비밀번호</span></label>
                    <br />
                    <input type="password" id="userPw" name="userPw" class="input" required />
                    <br />
                    <label for="userPwConfirm"><span>비밀번호 확인</span></label>
                    <br />
                    <input
                        type="password"
                        id="userPwConfirm"
                        name="userPwConfirm"
                        class="input"
                        required
                    />
                    <br />
                    <label for="name"><span> 이름</span></label>
                    <br />
                    <input type="text" id="name" name="name" class="input" required />
                    <br />
                    <label for="nickname"><span> 닉네임</span></label>
                    <br />
                    <input type="text" id="nickname" name="nickname" class="input" required />
                    <button class="btn_check">중복 확인</button>
                    <br /><br />
                    <button type="button" onclick="signup()" id="btn_signupNow">Signup now</button>
                </div>
            </form>
        </div>
        <script>
            function signup() {
                const form = document.forms["signupForm"];
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                if (p1 === p2) {
                    return true;
                } else {
                    alert("비밀번호가 일치하지 않습니다");
                    return false;
                }

                axios({
                    method: "POST",
                    url: "/users/signup",
                    data: {
                        email: form.email.value,
                        userId: form.userId.value,
                        userPw: form.userPw.value,
                        name: form.name.value,
                        nickname: form.nickname.value,
                    },
                }).then((res) => {
                    if (res.data.errors) {
                        for (i = 0; i < res.data.errors.length; i++) {
                            console.log(res.data.errors[i].msg);
                            alert(res.data.errors[i].msg);
                        }
                    } else {
                        alert("회원가입 완료");
                        document.location.href = "/";
                    }
                });
            }

            function checkId() {
                const userId = document.getElementById("userId").value;
                if (userId) {
                    alert("사용 가능한 아이디입니다.");
                } else {
                    alert("사용 불가능한 아이디입니다.");
                }
            }
        </script>
    </body>
</html>
