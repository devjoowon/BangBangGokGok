<!-- 회원가입 ejs -->
<!DOCTYPE html>
<html lang="ko">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>회원가입</title>
        <link rel="stylesheet" href="/static/css/signup.css" />
        <%-include('../include/head')%>
    </head>
    <body>
        <img src="/static/css/image/signup_img.png" alt="signup_img" id="img_signup" />
        <div class="signUpWallPaper">
            <form name="signupForm" id="signupForm">
                <fieldset>
                    <h1>Signup</h1>
                    <p>There is no charge upon registration!</p>
                    <div class="info">
                        <label for="email"><span>이메일</span></label>
                        <br />
                        <input type="email" id="email" name="email" class="big" required />
                        <button class="btn_check">중복 확인</button>
                    </div>
                    <br />
                    <div class="info">
                        <label for="userId"><span>아이디</span></label>
                        <br />
                        <input type="text" id="userId" name="userId" class="big" required />
                        <button class="btn_check">중복 확인</button>
                    </div>
                    <br />
                    <label for="userPw"><span>비밀번호</span></label>
                    <br />
                    <input type="password" id="userPw" name="userPw" class="big" required />
                    <br /><br />
                    <label for="name"><span>이름</span></label>
                    <br />
                    <input type="text" id="name" name="name" required />
                    <div class="info">
                        <label for="nickname"><span>닉네임</span></label>
                        <br />
                        <input type="text" id="nickname" name="nickname" required />
                        <button class="btn_check">중복 확인</button>
                    </div>
                    <br />
                    <button type="button" onclick="signup()" id="btn_signupNow">Signup now</button>
                </fieldset>
            </form>
        </div>
        <script>
            function signup() {
                const form = document.forms["signupForm"];
                if (!form.checkValidity()) {
                    form.reportValidity();
                    return;
                }

                axios({
                    method: "POST",
                    url: "/users/signup",
                    data: {
                        email: form.email.value,
                        userId: form.userId.value,
                        userPw: form.userPw.value,
                        name: form.name.value,
                        nickname: form.nickname.value,
                    },
                }).then((res) => {
                    if (res.data.errors) {
                        for (i = 0; i < res.data.errors.length; i++) {
                            console.log(res.data.errors[i].msg);
                            alert(res.data.errors[i].msg);
                        }
                    } else {
                        alert("회원가입 완료");
                        document.location.href = "/";
                    }
                });
            }
        </script>
    </body>
</html>
