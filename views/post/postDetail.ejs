<!-- 게시글 상세페이지 -->
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>게시글 상세 페이지</title>
        <%-include('../include/head')%>
        <link rel="stylesheet" href="/static/css/postDetail.css" />
    </head>
    <body>
        <div class="container">
            <div class="left">
                <img src="" alt="img_main" class="img_main" />
                <div class="author">작성자: 홍길동</div>
            </div>
            <div class="right">
                <div class="title-box">게시글 제목</div>
                <div class="content-box">게시글 내용</div>
                <div class="icons">
                    <i class="bi bi-heart" id="heart-icon"></i>
                    <button class="btn_chat">채팅하기</button>
                </div>
            </div>
        </div>
        <script>
            document.getElementById("heart-icon").addEventListener("click", function () {
                this.classList.toggle("bi-heart");
                this.classList.toggle("bi-heart-fill");
            });
        </script>
    </body>
</html>
