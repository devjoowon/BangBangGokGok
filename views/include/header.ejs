                    // userButton.href = `/users/mypage/${response.data.id}`;
                    const graphContainer = document.getElementById("graphContainer");
                    const svgString =
                        '<div class="graph">' +
                        '<svg width="200" height="30">' +
                        "<rect " +
                        'x="0" ' +
                        'y="0" ' +
                        'width="' +
                        (response.data.distance + 120) +
                        '" ' +
                        'height="30" ' +
                        (response.data.distance + 80 > 160
                            ? 'fill="#FF6F0F"'
                            : response.data.distance + 80 > 120
                            ? 'fill="#C55A11"'
                            : 'fill="#843C0C"') +
                        "></rect>" +
                        '<text x="10" y="20" fill="white">' +
                        (response.data.distance + 80) +
                        "km</text>" +
                        "</svg>" +
                        "</div>";
                    graphContainer.innerHTML = svgString;
                }
            }
